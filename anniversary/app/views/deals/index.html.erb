   <section id="list" class="bg-light-gray">
   <div class="row" >
   <div class="col-lg-12 text-center">
   <h2 class="section-heading">Notification List</h2>
   <br>
   <br>
   </div>
   </div>

   <div class="col-lg-12 text-center">       
   <div class="col-md-1 col-md-offset-1">
   <strong><p class="service-heading">Recipient</p>  
   </div>
   <div class="col-md-2">
   <p class="service-heading">Email Address</p>  
   </div>
  
   <div class="col-md-1">
   <p class="service-heading">Type</p>  
   </div>
   <div class="col-md-1">
   <p class="service-heading">Start Date</p>  
   </div>
   <div class="col-md-2">
   <p class="service-heading">Duration</p>  
   </div>
   <div class="col-md-1">
   <p class="service-heading">Next Alert</p>  
   </div>
   </strong></div>
   <% @deals.each do |deal| %>
   <div class="col-lg-12 text-center"> 
   <div class="col-md-1 col-md-offset-1">
   <p class="service-heading"><%= deal.name %></p>
   </div>
   <div class="col-md-2">
   <p class="service-heading"><%= deal.email %></p>  
   </div>
  
   <div class="col-md-1">
   <p class="service-heading"><%= deal.alert_type %></p> 
   </div>
   <div class="col-md-1">
   <p class="service-heading"><%= deal.start_date %></p>
   </div>
   <div class="col-md-2">
   <p class="service-heading"><%= deal.duration_day %> Day &nbsp;<%= deal.duration_month %> Month &nbsp;<%= deal.duration_year %> Year</p>  </div>
   <div class="col-md-1">
   <p class="service-heading"><%alertdate = deal.start_date%> 
   <%if deal.start_date==Time.now.utc.to_date  %>
   <%alertdate= alertdate + 1.year%>
   <%else%>
   <%while  alertdate < Time.now.utc.to_date %>
   <%  alertdate=  alertdate+deal.duration_day.days %> 
   <%  alertdate=   alertdate+deal.duration_month.months %>
   <%  alertdate=   alertdate+deal.duration_year.years %> 
   <%end%>
   <%end%>
    <%= alertdate%>
  </p></div>
   <div class="col-md-1">
   <p class="service-heading"><%= link_to 'Edit Alert', edit_deal_path(deal) %></p>
   </div>
   <div class="col-md-1">
   <p class="service-heading"><%= button_to 'Delete Alert', deal_path(deal),method: :delete %></p></div>
   </div>
   <%end%> 
   </div>
   </section>
   
 <section id="today" class="bg-light-gray">
   <div class="row">
   <div class="col-lg-12 text-center">
   <% month = Time.now.utc.to_date.month %>
   <% day = Time.now.utc.to_date.day %>
   <% year = Time.now.utc.to_date.year %>
   <%year1="#{year}"%>
   <%if month <10%>
   <%month="0#{month}"%>
   <%else%> 
   <%month ="#{month}"%>
   <%end%>
   <%if day <10%>
   <%day="0#{day}"%>
   <%else%> 
   <%day ="#{day}"%>
   <%end%>
   <br>
   <br>
   <br>
   <br>
   <h2 class="section-heading">TODAY</h2>
   <br>
   <br>
   <%annideal =[]%>
   <% @deals.each do |deal| %>
   <%first_deal = []%>
   <%first_deal <<deal.start_date%> 
   <%first_deal=first_deal.last.to_s.split"-"%>
   <% if month ==first_deal[1] && day==first_deal[2] %>
    <div class="col-md-4">
   <p class="service-heading"><%= deal.name %></p> 
   </div>
   <%diff= year-first_deal[0].to_i %>
   <div class="col-md-4">
   <p class="service-heading">  <%="#{deal.alert_type}"%></p> 
   </div>
   <%annideal <<deal%>
   <div class="col-md-4">
   <p class="service-heading"> <%=link_to 'Send Email', wish_deal_path(deal)%> </p> 
   </div> 
   <% end %>
   <% end %>

   </div>
   </div>
   </section>


